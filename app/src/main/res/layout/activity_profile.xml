<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@color/color_divider_light">

    <ImageView
            android:layout_width="0dp"
            app:srcCompat="@drawable/profile_bg" android:id="@+id/iv_background"
            android:scaleType="centerCrop"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintDimensionRatio="16:9"
            app:layout_constraintTop_toTopOf="parent"/>
    <ImageView
            android:layout_width="@dimen/avatar_round_size"
            android:layout_height="@dimen/avatar_round_size" app:srcCompat="@drawable/avatar_default"
            android:id="@+id/iv_avatar"
            app:layout_constraintStart_toStartOf="@+id/iv_background"
            app:layout_constraintEnd_toEndOf="@+id/iv_background" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintTop_toBottomOf="@+id/iv_background"
            app:layout_constraintBottom_toTopOf="@+id/tv_nick_name"/>
    <ImageButton
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_switch_day_night"
            android:id="@+id/btn_switch_theme"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar" app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            app:layout_constraintEnd_toStartOf="@+id/iv_avatar" android:layout_marginEnd="32dp"
            android:background="@drawable/btn_round_bg"/>
    <ImageButton
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_edit_black_24dp"
            android:id="@+id/btn_edit"
            app:layout_constraintTop_toTopOf="@+id/iv_avatar" app:layout_constraintBottom_toBottomOf="@+id/iv_avatar"
            app:layout_constraintStart_toEndOf="@+id/iv_avatar" android:layout_marginStart="32dp"
            android:background="@drawable/btn_round_bg"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_nick_name" tools:text="John Doe"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_avatar" style="@style/Profile.Header.Nickname"
            app:layout_constraintStart_toStartOf="@+id/iv_avatar" app:layout_constraintEnd_toEndOf="@+id/iv_avatar"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintBottom_toTopOf="@+id/tv_rank"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/tv_rank"
            app:layout_constraintTop_toBottomOf="@+id/tv_nick_name" app:layout_constraintEnd_toEndOf="@+id/tv_nick_name"
            app:layout_constraintStart_toStartOf="@+id/tv_nick_name" tools:text="Junior Android Developer"
            style="@style/Profile.Header.Rank" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toTopOf="@+id/iv_background"/>
    <view android:layout_width="411dp" android:layout_height="80dp"
          class="androidx.viewpager.widget.ViewPager"
          id="@+id/view2"
          android:background="?attr/colorAccentedSurface"
          android:id="@+id/view4" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/iv_background"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rating" tools:text="0"
            style="@style/Profile.Metrics.Value"
            app:layout_constraintBottom_toTopOf="@+id/tv_rating_lable"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintStart_toStartOf="@+id/view4"
            app:layout_constraintEnd_toStartOf="@+id/divider1"
            app:layout_constraintVertical_chainStyle="packed" android:drawableLeft="@drawable/ic_sp_24"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_rating_lable" style="@style/Profile.Metrics.Value"
            android:text="@string/profile_label_rating"
            app:layout_constraintTop_toBottomOf="@+id/tv_rating"
            app:layout_constraintEnd_toEndOf="@+id/tv_rating" app:layout_constraintStart_toStartOf="@+id/tv_rating"
            app:layout_constraintBottom_toBottomOf="@+id/view4"/>
    <view android:layout_width="1dp" android:layout_height="0dp"
          class="androidx.viewpager.widget.ViewPager"
          id="@+id/view3"
          app:layout_constraintTop_toTopOf="@+id/view4" app:layout_constraintBottom_toBottomOf="@+id/view4"
          android:layout_marginTop="8dp" android:layout_marginBottom="8dp"
          app:layout_constraintEnd_toEndOf="@+id/view4" app:layout_constraintStart_toStartOf="@+id/view4"
          android:layout_marginStart="8dp" android:id="@+id/divider1" android:background="@color/color_gray_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_respect" tools:text="0"
            style="@style/Profile.Metrics.Value"
            app:layout_constraintStart_toEndOf="@+id/divider1"
            app:layout_constraintEnd_toEndOf="@+id/view4"
            app:layout_constraintBottom_toTopOf="@+id/tv_respect_lable"
            app:layout_constraintTop_toTopOf="@+id/view4"
            app:layout_constraintVertical_chainStyle="packed" android:drawableLeft="@drawable/ic_respect_24"/>
    <TextView
            android:text="@string/profile_label_respect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_respect_lable"
            app:layout_constraintTop_toBottomOf="@+id/tv_respect"
            app:layout_constraintEnd_toEndOf="@+id/tv_respect" style="@style/Profile.Metrics.Label"
            app:layout_constraintStart_toStartOf="@+id/tv_respect" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintBottom_toBottomOf="@+id/view4"/>
    <ImageView
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_avatar"
            android:id="@+id/iv_firstLast_name"
            app:layout_constraintTop_toBottomOf="@+id/divider1" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp" android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/iv_firstLast_name"
            android:layout_marginStart="16dp" android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="@+id/iv_firstLast_name" android:id="@+id/textInputLayout2">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Profile.EditText.Single" android:hint="@string/profile_hint_first_name"
                android:id="@+id/et_first_name" tools:text="Jonh"/>
    </com.google.android.material.textfield.TextInputLayout>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="@+id/textInputLayout2"
            app:layout_constraintEnd_toEndOf="@+id/textInputLayout2"
            app:layout_constraintTop_toBottomOf="@+id/textInputLayout2" android:id="@+id/wr_last_name">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/et_last_name"
                android:hint="@string/profile_hint_last_name" style="@style/Profile.EditText.Single" tools:text="Doe"/>
    </com.google.android.material.textfield.TextInputLayout>
    <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:id="@+id/divider2" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/wr_last_name"
            android:background="?attr/colorDivider" android:layout_marginTop="5dp"
            android:layout_marginStart="72dp"/>
    <ImageView
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_about"
            android:id="@+id/iv_about"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_about" app:layout_constraintTop_toTopOf="@+id/iv_about"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp" android:layout_marginStart="16dp"
            android:id="@+id/wr_about"
            app:counterMaxLength="128">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/Profile.EditText.MultiLine" android:hint="@string/profile_hint_about"
                android:id="@+id/et_about" tools:text="something \nabout \nme "
                />
    </com.google.android.material.textfield.TextInputLayout>
    <view android:layout_width="0dp"
          class="androidx.viewpager.widget.ViewPager"
          id="@+id/view6" android:layout_height="1dp" app:layout_constraintStart_toStartOf="parent"
          app:layout_constraintEnd_toEndOf="parent"
          app:layout_constraintTop_toBottomOf="@+id/wr_about" android:layout_marginTop="5dp"
          android:id="@+id/devider3" android:background="?attr/colorDivider" android:layout_marginStart="72dp"/>
    <ImageView
            android:layout_width="@dimen/btn_round_size_40"
            android:layout_height="@dimen/btn_round_size_40" app:srcCompat="@drawable/ic_repo"
            android:id="@+id/iv_repo"
            app:layout_constraintTop_toBottomOf="@+id/devider3"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"/>
    <com.google.android.material.textfield.TextInputLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@+id/iv_repo" app:layout_constraintTop_toTopOf="@+id/iv_repo"
            android:id="@+id/wr_repository"
            app:layout_constraintEnd_toStartOf="@+id/ic_eye" android:layout_marginEnd="16dp"
            app:layout_constraintHorizontal_chainStyle="packed" android:layout_marginStart="16dp">

        <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/profile_hint_repository" style="@style/Profile.EditText.Single"
                android:id="@+id/et_repository"/>
    </com.google.android.material.textfield.TextInputLayout>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_eye_24dp"
            android:id="@+id/ic_eye"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="@+id/wr_repository"
            app:layout_constraintBottom_toBottomOf="@+id/wr_repository"
            app:layout_constraintStart_toEndOf="@+id/wr_repository" android:layout_marginEnd="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>